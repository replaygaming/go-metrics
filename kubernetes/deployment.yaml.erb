apiVersion: extensions/v1beta1
kind: Deployment
metadata:
  name: metrics
  labels:
    component: metrics
    environment: <%= environment %>
spec:
  replicas: 1
  template:
    metadata:
      labels:
        component: metrics
        environment: <%= environment %>
    spec:
      containers:
      - name: metrics
        image: us.gcr.io/replay-gaming/go-metrics:c4900d1c2164a15ef64020c2b47e9697f18c445c
        env:
        - name: AMPLITUDE_API_KEY
          valueFrom:
            secretKeyRef:
              name: metrics
              key: amplitude-api-key
        - name: PUBSUB_PROJECT_ID
          valueFrom:
            secretKeyRef:
              name: pubsub
              key: project-id
        - name: PUBSUB_KEYFILE
          value: /etc/pubsub/keyfile.json
        - name: METRICS_TOPIC
          value: <%= topic_name %>
        - name: METRICS_SUBSCRIPTION
          value: <%= subscription_name %>
        volumeMounts:
          - name: pubsub-secret
            readOnly: true
            mountPath: /etc/pubsub
        resources:
          requests:
            memory: "40Mi"
          limits:
            cpu: "1000m"
            memory: "100Mi"
        imagePullPolicy: Always
      volumes:
        - name: pubsub-secret
          secret:
            secretName: pubsub
